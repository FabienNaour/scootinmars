<!-- Modal -->
<div class="modal fade" id="myModal<%= scooter.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="img" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0) 0%, rgba(0,36,61,0.3) 20%), url(<%= scooter.url %>);">
        <div class="modal-header" >
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">
            <%= scooter.marque %>
            <%= scooter.modele %>
          </h4>
        </div>
      </div>
      <div class="modal-body">
        <table>
          <tr>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <td>DISPONIBILITÉ :</td>
            <td class="infos"><%= scooter.disponible %></td>
          </tr>
          <tr>
            <td>CATEGORIE :</td>
            <td class="infos"><%= scooter.categorie %></td>
          </tr>
          <tr>
            <td>PERMIS :</td>
            <td class="infos"><%= scooter.permis %></td>
          </tr>
          <tr>
            <td>ANNÉE :</td>
            <td class="infos"><%= scooter.annee %></td>
          </tr>
          <tr>
            <td>KILOMÉTRAGE :</td>
            <td class="infos"><%= scooter.kilometrage %> Km</td>
          </tr>
          <tr>
            <td>PRIX :</td>
            <td class="infos"> <%= scooter.prix %> €/jours </td>
          </tr>
        </table>
      </div>
      <div class="modal-footer">
        <%= link_to 'réserver', new_scooter_reservation_path(scooter), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
