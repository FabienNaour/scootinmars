<div class="container">
  <h1>Votre Réservation</h1>
  <div class="reservation-card">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="crop">
          <img src="<%= @scooter.url %>" alt="scooter img" class="scooter_photo">
        </div>
      </div>
      <div class="col-xs-12 col-sm-2 col-sm-offset-1">
        <div class="reservation_form">
          <%= simple_form_for [@scooter, @reservation] do |f| %>
            <%= f.input :date_debut, input_html: { id: "rangeStart", placeholder: "choisir une date" } %>
            <%= f.input :date_fin, input_html: {id: "rangeEnd", placeholder: "choisir une date" } %>
            <div class="prix">
            </div>
            <%= f.submit "réserver", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
